<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search with Autocomplete</title>
    <script src="https://unpkg.com/lucide@latest"></script>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
    <div class="max-w-2xl mx-auto pt-16 px-4">
        <div class="relative">
            <div class="relative flex">
                <i data-lucide="search" class="absolute left-4 top-3.5 h-5 w-5 text-gray-400"></i>
                <input type="text"
                       id="searchBox"
                       class="w-full bg-white rounded-l-full pl-12 pr-4 py-3 shadow-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                       placeholder="Search locations..."
                       autocomplete="off">
                <button id="searchButton"
                        class="bg-yellow-400 hover:bg-yellow-500 text-white px-6 rounded-r-full shadow-lg transition-colors">
                    Search
                </button>
            </div>
            <div id="autocompleteResults" class="absolute w-full mt-2 bg-white rounded-2xl shadow-xl overflow-hidden z-50"></div>
        </div>
    </div>

    <script src="js/autoComplete.js"></script>
</body>
</html>

